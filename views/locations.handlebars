<!doctype html>

<html>


	<head>
		<title>Locations</title>
		<link href="/css/PocketPup.css" rel="stylesheet">
		<link href="/css/bootstrap.css" rel="stylesheet">
		<link href="/css/bootstrap-theme.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" >

		<script src="/js/jquery.js"></script>
		<script src="/js/bootstrap.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>


	<body>

		<div class="bar top">
			<a href="activity" id="actButton"><i class="fa fa-book"></i></a>
			<p class="pageTitle">Locations</p>
			<a href="store" id="storeButton"><i class="fa fa-credit-card"></i></a>
		</div>

		<div class="buffer"></div>

		{{#each locations}}
		<div class="locationsNode">
			<div class="locHeading">
				<p id="locName">{{locName}}</p>
				<p id="locRating">{{locRating}} stars</p>
			</div>
			<div>
				<iframe src="{{locURL}}" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
			</div>
		</div>
		{{/each}}

		<div class="buffer"></div>

		<div class="bar bottom">
		  <a href="home"><i class="fa fa-home"></i></a> 
		  <a class="active bottom" href="locations"><i class="fa fa-map-marker"></i></a> 
		  <a href="training"><i class="fa fa-paw"></i></a> 
		  <a href="vote"><i class="fa fa-check-square-o"></i></a>
		</div>

	</body>
</html>